{% extends 'base.html.twig' %}

{% block body %}
    <h1>Child</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ child.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ child.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ child.firstname }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ child.address }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ child.zipcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ child.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ child.country }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ child.longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ child.latitude }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('child_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('child_edit', { 'id': child.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
